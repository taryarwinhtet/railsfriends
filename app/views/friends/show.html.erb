

<div class="jumbotron">
  <h1 class="display-4">
  <%= @friend.first_name %>
  <%= @friend.last_name %>
  </h1>
  <p class="lead">
  <%= @friend.email %>  | <%= @friend.phone %> |  <%= @friend.twitter %>
  </p>

  <div class='flex-around'>
  <%= link_to "Edit details", edit_friend_path(@friend),class:"btn btn-secondary" %> 
  <%= link_to "Back to friends", friends_path, class:"btn btn-secondary" %>

  <%= button_to "Delete this friend", @friend, method: :delete,  class:"btn btn-danger" %>
  </div>
  
</div>

